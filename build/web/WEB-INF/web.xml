<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>SettingPageOnLoad</filter-name>
        <filter-class>Controller.Filters.SettingPageOnLoad</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SettingPageOnLoad</filter-name>
        <url-pattern>/admin</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>Controller.Servlets.LoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadSong</servlet-name>
        <servlet-class>Controller.Servlets.UploadSong</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditSong</servlet-name>
        <servlet-class>Controller.EditSong</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPlaylistSongs</servlet-name>
        <servlet-class>Controller.Servlets.GetPlaylistSongs</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlaylistServlet</servlet-name>
        <servlet-class>Controller.Servlets.PlaylistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/LoginHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadSong</servlet-name>
        <url-pattern>/UploadSong</url-pattern>
    </servlet-mapping>
    <!-- Admin route -->
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/Pages/Common/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- Admin route -->
    <servlet>
        <servlet-name>Admin</servlet-name>
        <jsp-file>/Pages/Common/admin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <!-- Main route -->
    <servlet>
        <servlet-name>Main</servlet-name>
        <jsp-file>/Pages/Common/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPlaylistSongs</servlet-name>
        <url-pattern>/GetPlaylistSongs</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Pages/Common/login.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>PlaylistServlet</servlet-name>
        <url-pattern>/PlaylistServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
        <!-- Timeout in minutes -->
    </session-config>
</web-app>
